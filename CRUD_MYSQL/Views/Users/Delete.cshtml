@model CRUD_MYSQL.Models.User

@{
    ViewData["Title"] = "Delete";
    ViewData["FullTitle"] = "Delete user";
}

<h3 class="text-center mb-3 text-danger">Are you sure you want to delete this?</h3>
<div>
    <table class="user-detail w-50 m-auto">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <td>@Html.DisplayFor(model => model.FullName)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <td>@Html.DisplayFor(model => model.UserName)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <td>@Html.DisplayFor(model => model.Password)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <td>@Html.DisplayFor(model => model.CreatedAt)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
            </tr>
        </thead>
    </table>
    
    <form asp-action="Delete" class="mt-3 w-50 d-flex ml-auto mr-auto">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger w-50 mr-1" />
        <a asp-action="Index" class="w-50 btn btn-secondary ml-1">Back to List</a>
    </form>
</div>
